<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TestDevise.ChildPage">
  <ContentPage.Content>
    <StackLayout
       Padding="0,50,0,0"
       BackgroundColor="#2287ca"
       VerticalOptions="FillAndExpand"
       Spacing="20">
      <Image Source="ic_launcher.png"  HeightRequest="200"
       WidthRequest="200" />

      
      <StackLayout
      Orientation="Horizontal"
      HorizontalOptions="CenterAndExpand"
      Spacing="200">
       
        <Button
           x:Name="buttonSOS"
           Text="Call SOS"
           TextColor="White"
           BackgroundColor="Red"
           BorderRadius="15"
           HeightRequest="60"
           WidthRequest="250"
           />
      </StackLayout>
      
    </StackLayout>
  </ContentPage.Content>

</ContentPage>